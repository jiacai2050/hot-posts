<table border=1>
<tr><th>Replies</th><th>Node</th><th>Title</th></tr>
<%  for(let post of posts) { %>
<tr>
    <td><a href="#body-<%= post.id %>"><%= post.replies %></a></td>
    <td><a href="<%- post.node_url %>"><%= post.node %></a></td>
    <td><a href="<%- post.url %>"><%= post.title %></a></td>
</tr>
<%  }  %>

</table>

<ol>
<%  for(let post of posts) { %>
<li>
    <h2><a href="<%- post.url %>"><%= post.title %></a></h2>
    <h4>Posted By <a href="<%- post.author_url %>"><%= post.author %></a><img src="<%= post.author_image %>"/> at <%= post.created %> in <img src="<%= post.node_image %>"/><a name="body-<%- post.id %>"><%= post.node %></a>
</h4>
    <%- post.description %>
</li>
<%  }  %>

